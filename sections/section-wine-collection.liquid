<section class="four-boxes">
   <div class="container-fluid">
      <div class="row">
        {% for block in section.blocks %}
         <div class="col-lg-3 col-md-6">
            <div class="tour-bx">
               <a href="{{block.settings.btn_link}}">
                  <img src="{{block.settings.img_desktop | img_url:'master'}}" alt="" class="w-100">
                  <h4>{{block.settings.title}} <img src="{{'long-arrow.svg' | file_url }}" alt="" class="arrow-lg"></h4>
               </a>
            </div>
         </div>
         {%endfor%}
      </div>
   </div>
</section>
{% schema %}
  {
    "name": "HomePage Wine Collection",
    "settings": [
	 
	],
    "blocks": [
     {
      "type": "image",
      "name": "image",
      "limit":4,
      "settings": [
        {
        "type": "image_picker",
        "id": "img_desktop",
        "label": "Collection Desktop Image",
        "info": "441x365px recommended"
        },
        
  		{
        "type": "text",
        "id": "title",
        "label": "Title",
        "default":"Shop Wines"
      },
	  
	  {
        "type": "url",
        "id": "btn_link",
        "label": "Collection link"
      }
	  
      ]
     }
    ],
    "presets": [{
      "name": "HomePage Wine Collection",
      "category": "HOMEPAGE"
    }]
  }
{% endschema %}
